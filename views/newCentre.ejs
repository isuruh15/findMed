<% include partials/headerNew %>

<link rel="stylesheet" href="/css/newCentre.css">

<div class="formdiv border border-primary rounded" style="margin-top: 8rem; flex: 1;">
  <div class="heading"><h2>Register Channelling Centre</h2></div>
  <form method="POST" action="/centre">
    <div class="form-group">
      <label for="name">Channelling Centre Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Channelling Centre">
    </div>
    <div class="form-group">
      <label for="slmcreg">SLMC Registration Number</label>
      <input type="text" class="form-control" id="slmcreg" name="slmcreg" placeholder="Registration Number">
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" name="address" placeholder="Address">
    </div>
    <div class="row">
      <div class="form-group col-sm-6">
        <label for="city">City</label>
        <select class="form-control" id="city" name="city">
          <% cities.forEach((city) => { %>
            <option><%= city.name %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group col-sm-6">
        <label for="contact">Contact Number</label>
        <input type="text" class="form-control" id="contact" name="contact" placeholder="Contact Number">
      </div>
    </div>
    <div class="login-btn">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </form>
</div>

<% include partials/footer %>